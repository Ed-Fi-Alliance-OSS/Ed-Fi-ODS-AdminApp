@using EdFi.Ods.AdminApp.Web.Models.ViewModels.Application
@using EdFi.Ods.AdminApp.Web.Helpers
@model EdFi.Ods.AdminApp.Web.Models.ViewModels.VendorApplicationsIndexModel

@{
    ViewBag.Title = "Production | Applications";
}

@{ await Html.RenderPartialAsync("_DeleteVendorApplicationModal", new DeleteApplicationModel()); }
@{ await Html.RenderPartialAsync("_RegenerateApplicationSecretModal", new RegenerateSecretModel()); }

@foreach (var vendorApplicationModel in Model.Vendors.Items)
{
    await Html.RenderPartialAsync("_ApplicationsByVendor", vendorApplicationModel);
}

@Html.PagingControl(Url.Action("ApplicationList","Application"), Model.Vendors)
